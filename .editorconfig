[*]
root = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
quote_type = "double"
space_after_anon_function = true
space_before_conditional = true

[*.py]
indent_size = 4

[*.rs]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
